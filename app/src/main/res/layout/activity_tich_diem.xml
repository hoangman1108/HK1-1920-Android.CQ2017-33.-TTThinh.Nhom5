<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    tools:context=".TichDiem">

    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã thành viên"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#f000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9292"/>
    <ImageView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:src="@drawable/qrcode"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:textColor="#f000"
        android:text="Đưa mã này cho nhân viên thành toán"/>

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#9C9292"/>

    <TextView
        android:textSize="20sp"
        android:textColor="#f000"
        android:textStyle="bold"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coupon của bạn (0)"/>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#f000"
        android:text="Bạn chưa có coupon nào! tích lũy thêm điểm để nhận được nhiều ưu đãi."/>
</LinearLayout>