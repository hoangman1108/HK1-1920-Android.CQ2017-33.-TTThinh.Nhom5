<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/fragment_giohang"
    android:background="#fff4e6"
    android:layout_height="match_parent">
    <ListView
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listview_xacnhan_final"/>
    <EditText
        android:textColor="#f000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bạn muốn dặn dò gì không?"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#f000"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tạm tính"
            android:textSize="20sp"/>
        <TextView
            android:textColor="#f000"
            android:layout_weight="3"
            android:id="@+id/tv_xacnhan_tongtien"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0.000 đ"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_xacnhan_tongtien"
            android:background="#00000000"
            android:textColor="#f000"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="0.000 đ"
            android:textSize="28sp"
            android:drawableTop="@drawable/tien"
            android:drawableTint="#2ABB30"
            android:paddingTop="5dp"/>
        <Button
            android:id="@+id/btn_xacnhan_giamgia"
            android:background="#00000000"
            android:textColor="#f000"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:text="Mã giảm giá"
            android:textSize="20sp"
            android:drawableTop="@drawable/coupon"
            android:drawableTint="#1B78AF"
            android:paddingTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="#fff"
            android:background="@drawable/custom_button_ad1"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/btn_xacnhan"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Xác nhận"/>
        <Button
            android:textColor="#474747"
            android:background="@drawable/custom_button_ad"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:id="@+id/btn_xacnhan_tuchoi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Từ chối"/>
    </LinearLayout>
</LinearLayout>