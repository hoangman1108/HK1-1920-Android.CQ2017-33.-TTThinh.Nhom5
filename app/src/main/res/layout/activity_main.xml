<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerlayout"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Menu-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GUEST"
                    android:textStyle="bold"
                    android:textSize="30sp"
                    android:gravity="end"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <SearchView
                        android:id="@+id/searchviewMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/edittext_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:hint="Search" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ava"
                android:layout_width="80dp"
                android:layout_height="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="40dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:textSize="17sp"
                    android:id="@+id/btnDatHang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:text="Đặt Hàng"/>
                <Button
                    android:textSize="17sp"
                    android:id="@+id/btnTichDiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:text="Tích Điểm"/>
                <Button
                    android:textSize="17sp"
                    android:id="@+id/btnCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:text="Coupon"/>
            </LinearLayout>

            <Button
                android:layout_marginTop="5dp"
                android:layout_marginLeft="11dp"
                android:textSize="17sp"
                android:id="@+id/btnXemThem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="#2196F3"
                android:text="Xem Thêm"/>
        </LinearLayout>

        <FrameLayout
            android:layout_marginBottom="20sp"
            android:background="#f777"
            android:id="@+id/framelayout_monmoi"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <FrameLayout
            android:background="#f444"
            android:id="@+id/framelayout_tintuc"
            android:layout_width="300dp"
            android:layout_height="160dp"/>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        app:menu="@menu/account"
        android:layout_gravity="end"
        app:headerLayout="@layout/head"
        />


</androidx.drawerlayout.widget.DrawerLayout>